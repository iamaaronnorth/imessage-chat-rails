<div class="flex h-screen">
  <!-- Sidebar - Room List -->
  <div class="w-1/3 bg-white border-r border-gray-300 flex flex-col">
    <!-- Header -->
    <div class="p-4 border-b border-gray-200 bg-gray-50">
      <h2 class="text-lg font-semibold text-gray-800">Messages</h2>
    </div>
    
    <!-- New Room Form -->
    <div class="p-4 bg-gray-50 border-b border-gray-200">
      <%= form_with model: @new_room, local: false, class: "flex space-x-2" do |form| %>
        <%= form.text_field :name, placeholder: "New chat room name...", 
            class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" %>
        <%= form.submit "Create", 
            class: "px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" %>
      <% end %>
    </div>

    <!-- Room List -->
    <div class="flex-1 overflow-y-auto">
      <% all_rooms = (@rooms + @owned_rooms).uniq.sort_by(&:last_message_time).reverse %>
      <% if all_rooms.any? %>
        <% all_rooms.each do |room| %>
          <%= link_to room_path(room), class: "block hover:bg-gray-100 transition-colors duration-150" do %>
            <div class="p-4 border-b border-gray-100">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-800 text-sm"><%= room.name %></h3>
                  <% if room.last_message %>
                    <p class="text-gray-500 text-xs mt-1 truncate">
                      <%= room.last_message.user.display_name %>: <%= room.last_message.content %>
                    </p>
                  <% else %>
                    <p class="text-gray-400 text-xs mt-1 italic">No messages yet</p>
                  <% end %>
                </div>
                <div class="text-right ml-2">
                  <% if room.last_message_time %>
                    <p class="text-gray-400 text-xs">
                      <%= time_ago_in_words(room.last_message_time) %> ago
                    </p>
                  <% end %>
                  <div class="flex items-center mt-1">
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs bg-gray-200 text-gray-600">
                      <%= room.members.count %> member<%= 's' if room.members.count != 1 %>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="p-8 text-center text-gray-500">
          <p class="text-lg">No chat rooms yet</p>
          <p class="text-sm mt-2">Create your first chat room above!</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="flex-1 bg-gray-50 flex flex-col items-center justify-center">
    <div class="text-center">
      <div class="w-24 h-24 mx-auto mb-6 bg-blue-500 rounded-full flex items-center justify-center">
        <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <h2 class="text-2xl font-semibold text-gray-800 mb-2">Welcome to iMessage Chat</h2>
      <p class="text-gray-600 mb-6">Select a chat room to start messaging</p>
    </div>
  </div>
</div>